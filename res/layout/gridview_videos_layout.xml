<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    android:orientation="vertical" >
    
    <!-- HIDDEN -->
    	<TextView android:id="@+id/id_video" android:visibility="gone" android:layout_width="0dip" android:layout_height="0dip" />
    	<TextView android:id="@+id/valor" android:visibility="gone" android:layout_width="0dip" android:layout_height="0dip" />
    	<TextView android:id="@+id/descricao" android:visibility="gone" android:layout_width="0dip" android:layout_height="0dip" />
    	<TextView android:id="@+id/arquivo" android:visibility="gone" android:layout_width="0dip" android:layout_height="0dip" />
    <!-- HIDDEN -->
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:background="#7C7C7C"
	    android:baselineAligned="false"
	    android:gravity="center"
	    android:orientation="horizontal" >

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="160dip"
	        android:layout_margin="5dip"
	        android:listSelector="#000"
	        
	        android:background="#767676"
	        android:orientation="vertical" >

	        <ImageView
	            android:id="@+id/img_thumb"
	            android:layout_width="140dp"
	            android:layout_height="109dp"
	            android:layout_margin="5dip"
	            android:background="#767676"
	            android:scaleType="fitCenter" />

	        <TextView
	            android:id="@+id/aula_nome"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="#FFF" />

	        <TextView
	            android:id="@+id/aula_posicao"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dip"
	            android:gravity="center"
	            android:textColor="#FF5400"
	            android:textSize="12sp" />
	    </LinearLayout>

	</LinearLayout>
	
</LinearLayout>